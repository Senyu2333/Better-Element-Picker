{
  "manifest_version": 3,
  "name": "Better Element Picker",
  "version": "0.1.0",
  "description": "A browser extension that allows user hover certain element by pointer and then highlight its DOM node",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/extension-icon16x16.png"
    }
  },
  "icons": {
    "16": "icons/extension-icon16x16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": [
    "activeTab"
  ]
}